<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/expenseListFragment">

    <fragment
        android:id="@+id/expenseListFragment"
        android:name="com.bio.personalexpense.ui.ExpenseListFragment"
        android:label="Expense List">
        <action
            android:id="@+id/action_expenseListFragment_to_addEditExpenseFragment"
            app:destination="@id/addEditExpenseFragment" />
        <action
            android:id="@+id/action_expenseListFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditExpenseFragment"
        android:name="com.bio.personalexpense.ui.AddEditExpenseFragment"
        android:label="Add/Edit Expense">
        <argument
            android:name="expenseId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.bio.personalexpense.ui.DashboardFragment"
        android:label="Monthly Dashboard" />

</navigation> 